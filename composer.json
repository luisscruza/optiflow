{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/react-starter-kit",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-zip": "*",
        "barryvdh/laravel-dompdf": "^3.1.1",
        "filament/filament": "^4.5.2",
        "inertiajs/inertia-laravel": "^2.0.18",
        "irazasyed/telegram-bot-sdk": "^3.15",
        "laravel/framework": "^12.46.0",
        "laravel/sanctum": "^4.2.2",
        "laravel/tinker": "^2.11.0",
        "laravel/wayfinder": "^0.1.12",
        "maatwebsite/excel": "^3.1.67",
        "nunomaduro/essentials": "^0.1",
        "resend/resend-laravel": "^1.1",
        "spatie/laravel-activitylog": "^4.10.2",
        "spatie/laravel-medialibrary": "^11.17.8",
        "spatie/laravel-permission": "^6.24",
        "stancl/tenancy": "^3.9.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6.1",
        "driftingly/rector-laravel": "^2.1.9",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.8.1",
        "laravel/boost": "^1.8.9",
        "laravel/pail": "^1.2.4",
        "laravel/pint": "^1.27.0",
        "laravel/sail": "^1.52",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.3.1",
        "pestphp/pest-plugin-browser": "^4.2.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "refactor": "rector",
        "lint": "pint --parallel",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --parallel --min=11 --compact",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
